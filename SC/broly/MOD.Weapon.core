		setWeaponDMG( 17.0, 200.0, 0.07 );
	}
	if ( equal( Class, "finalflash" ) && getClientLEVEL( Client ) == 4 )
	{
		setWeaponXPC( 1 );
		setWeaponXPM( 12.5 );
		setWeaponDMG( 40.0, 420.5, 6.13 );
	}
	else if ( equal( Class, "finalflash" ) && getClientLEVEL( Client ) == 3 )
	{
		setWeaponXPC( 1 );
		setWeaponXPM( 9.0 );
