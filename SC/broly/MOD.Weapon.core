	{	
		setWeaponXPC( 1 );
		setWeaponXPM( 6.5 );
	}
	if ( equal( Class, "bigbang" ) && getClientLEVEL( Client ) == 4 )
	{
		setWeaponXPC( 1 );
		setWeaponXPM( 8.0 );
		setWeaponDMG( 37.5, 350.0, 4.11 );
	}
	else if ( equal( Class, "bigbang" ) && getClientLEVEL( Client ) == 3 )
	{
		setWeaponXPC( 1 );
