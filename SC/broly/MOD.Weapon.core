		write_byte		( 5 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		message_end		();
		
	}
	else if ( equal( Class, "kiblast" ) )
	{
		setWeaponXPM( 1.2 );
		setWeaponXPC( 1 );
		
		message_begin	( MSG_BROADCAST, SVC_TEMPENTITY );
