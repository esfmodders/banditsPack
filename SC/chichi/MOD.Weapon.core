public @IconUpdate ( Client, Level )
{
	if( Level == 0 )
		replaceClientICON( Client , C_ICON_KAME, ICON_KAMEHAMEHA );
	
	if( Level == 1 )
		replaceClientICON( Client , C_ICON_JUBEIKAME, ICON_KAMEHAMEHA );	

	if( Level == 2 )
		replaceClientICON( Client , C_ICON_KAME, ICON_KAMEHAMEHA );

	if( Level == 3 )
		replaceClientICON( Client , C_ICON_KAME, ICON_KAMEHAMEHA );

	if( Level == 4 )
		replaceClientICON( Client , C_ICON_JUBEIKAME, ICON_KAMEHAMEHA );

	if( Level == 0 )
		replaceClientICON( Client , C_ICON_JUBEIKAME, ICON_KAMEHAMEHA );		


}

public @BaseWeaponCreation ( Client, BaseWeapon, const Name[] )
{
	if( equal( Name, "weapon_renzoku" ) )
	{
		setBlastChargeTime( BaseWeapon, 1 );
		setBlastChargeKi( BaseWeapon, 10 );
	}
	if ( equal( Name, "weapon_spiritbomb" ) && getClientLEVEL( Client ) == 1 )
	{
		setBeamChargeTime( BaseWeapon, 1 );
		setBeamChargeKi( BaseWeapon, 50 );
	}
}


public @WeaponAdjust ( Client, Weapon, const Class[] )
{
	/**
	 0 - Blue
	 1 - Green
	 2 - Orange
	 3 - Purple
	 4 - Yellow
	 5 - Red
	 6 - White
	 7 - None
	**/

	
	if ( equal( Class, "greenattack" ) && getClientLEVEL( Client ) > 1 )
	{	
		setWeaponXPC( 5 );
		setWeaponXPM( 6.5 );
	}
		
		

	else if ( equal( Class, "greenattack" ) && getClientLEVEL( Client ) > 3 )
		setWeaponXPC( 5 );	

	else if ( equal( Class, "greenattack" ) && getClientLEVEL( Client ) > 4 )
		setWeaponXPC( 5 );	

	else if ( equal( Class, "greenattack" ) && getClientLEVEL( Client ) > 5 )
		setWeaponXPC( 5 );		
		
	else if ( equal( Class, "kiblast" ) && getClientLEVEL( Client ) == 1 )
	{
		setWeaponXPM( 1.2 );
		setWeaponXPC( 5 );
		message_begin	( MSG_BROADCAST, SVC_TEMPENTITY );
		write_byte		( TE_BEAMFOLLOW );
		write_short		( Weapon );
		write_short		( SPR_JUBEIKAME_T );
		write_byte		( 9 );
		write_byte		( 6 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		message_end		();
	}	
	
	
	if ( equal( Class, "kamehameha" ) && getClientLEVEL( Client ) == 0 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 8.0 );
		// Super Kamehameha
		setWeaponDMG( 9.0, 150.0, 0.07 );
	}
	
	else if ( equal( Class, "gallitgun" ) && getClientLEVEL( Client ) == 1 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 8.0 );
		// Super Kamehameha
		setWeaponDMG( 20.0, 150.0, 0.07 );
	}
	else if ( equal( Class, "bigbang" ) && getClientLEVEL( Client ) == 0 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 18.0 );
		// Super Kamehameha
		setWeaponDMG( 11.0, 150.0, 0.07 );
	}
	else if ( equal( Class, "bigbang" ) && getClientLEVEL( Client ) == 1 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 18.0 );
		// Super Kamehameha
		setWeaponDMG( 19.0, 150.0, 0.07 );
	}
	
	else if ( equal( Class, "kamehameha" ) && getClientLEVEL( Client ) == 2 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 8.0 );
		// Super Kamehameha
		setWeaponDMG( 9.0, 150.0, 0.07 );
	}
	else if ( equal( Class, "kamehameha" ) && getClientLEVEL( Client ) == 3 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 6.0 );
		// Super Kamehameha
		setWeaponDMG( 11.0, 140.0, 0.08 );
	}
	else if ( equal( Class, "kamehameha" ) && getClientLEVEL( Client ) == 4 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 7.0 );
		// Jubei Kamehameha
		setWeaponDMG( 11.0, 140.0, 0.08 );
	}
	
	else if ( equal( Class, "kamehameha" ) && getClientLEVEL( Client ) == 5 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 7.0 );
		// Red-Evil Kamehameha
		setWeaponDMG( 11.0, 140.0, 0.08 );
	}
	
	if ( equal( Class, "spiritbomb" ) && getClientLEVEL( Client ) == 0 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 8.0 );
		// Evil-Spiritbomb
		setWeaponDMG( 9.0, 150.0, 0.07 );
	}
	
	else if ( equal( Class, "spiritbomb" ) && getClientLEVEL( Client ) == 1 )
	{
		setWeaponXPC( 5 );
		setWeaponXPM( 9.0 );
		// Evil-Spiritbomb
