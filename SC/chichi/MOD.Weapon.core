public @WeaponDeath ( Client, Killer, const Weapon[] )
{
	/**
	 1 -   BYTE - Killer - do not edit
	 2 -   BYTE - Client - do not edit
	 3 - STRING - Weapon
	**/

	if ( equal( Weapon, "greenattack" ) && getClientLEVEL( Killer ) == 0 )
		set_msg_arg_string( 3, "blueattack" );
	else if ( equal( Weapon, "gallitgun" ) && getClientLEVEL( Killer ) > 0 )
		set_msg_arg_string( 3, "Wraith of a Women" );
	else if ( equal( Weapon, "kamehameha" ) && getClientLEVEL( Killer ) == 0 )
		set_msg_arg_string( 3, "red-kamehameha" );
	else if ( equal( Weapon, "kamehameha" ) && getClientLEVEL( Killer ) == 1 )
		set_msg_arg_string( 3, "red-kamehameha" );
	else if ( equal( Weapon, "kamehameha" ) && getClientLEVEL( Killer ) == 2 )
		set_msg_arg_string( 3, "red-kamehameha" );
	else if ( equal( Weapon, "kamehameha" ) && getClientLEVEL( Killer ) == 3 )
		set_msg_arg_string( 3, "red-kamehameha" );
	else if ( equal( Weapon, "kamehameha" ) && getClientLEVEL( Killer ) == 4 )
		set_msg_arg_string( 3, "superred-kamehameha" );
	else if ( equal( Weapon, "kamehameha" ) && getClientLEVEL( Killer ) == 5 )
		set_msg_arg_string( 3, "Redevil-kamehameha" );
	else if ( equal( Weapon, "spiritbomb" ) && getClientLEVEL( Killer ) == 0 )
		set_msg_arg_string( 3, "Evil-Spiritbomb" );
	else if ( equal( Weapon, "spiritbomb" ) && getClientLEVEL( Killer ) == 1 )
		set_msg_arg_string( 3, "Evil-Spiritbomb" );
	else if ( equal( Weapon, "spiritbomb" ) && getClientLEVEL( Killer ) == 4 )
		set_msg_arg_string( 3, "Evil-Spiritbomb" );	
	else if ( equal( Weapon, "spiritbomb" ) && getClientLEVEL( Killer ) == 5 )
		set_msg_arg_string( 3, "Evil-Spiritbomb" );		
		

}