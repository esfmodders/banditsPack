public @WeaponAdjust ( Client, Weapon, const Class[] )
{
	/**
	 0 - Blue
	 1 - Green
	 2 - Orange
	 3 - Purple
	 4 - Yellow
	 5 - Red
	 6 - White
	 7 - None
	**/

	
	
	if ( equal( Class, "greenattack" ) && getClientLEVEL(Client) == 0 )
	{	
		setWeaponXPC( 0 );
		setWeaponXPM( 3.5 );
	}
	
	if ( equal( Class, "greenattack" ) && getClientLEVEL(Client) == 1 )
	{	
		setWeaponXPC( 4 );
		setWeaponXPM( 5.5 );
	}
	if ( equal( Class, "greenattack" ) && getClientLEVEL(Client) == 2 )
	{	
		setWeaponXPC( 4 );
		setWeaponXPM( 7.5 );
	}	

	else if ( equal( Class, "kamehameha" ) && getClientLEVEL(Client) == 1 )
	{
		setWeaponXPM( 6.0 );
		setWeaponXPC( 0 );
		setWeaponDMG( 11.0, 110.0, 0.40 );
		message_begin	( MSG_BROADCAST, SVC_TEMPENTITY );
		write_byte		( TE_BEAMFOLLOW );
		write_short		( Weapon );
		write_short		( SPR_BIGBANG_T );
		write_byte		( 10 );
		write_byte		( 20 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		message_end		();
		

	}
	else if ( equal( Class, "kamehameha" ) && getClientLEVEL(Client) == 2 )
	{
		setWeaponXPM( 10.0 );
		setWeaponXPC( 0 );
		setWeaponDMG( 17.0, 130.0, 0.40 );
		message_begin	( MSG_BROADCAST, SVC_TEMPENTITY );
		write_byte		( TE_BEAMFOLLOW );
		write_short		( Weapon );
		write_short		( SPR_BIGBANG_T );
		write_byte		( 10 );
		write_byte		( 20 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		message_end		();
		

	}
	else if ( equal( Class, "kamehameha" ) && getClientLEVEL(Client) == 3 )
	{
		setWeaponXPM( 15.0 );
		setWeaponXPC( 0 );
		setWeaponDMG( 22.0, 200.0, 0.40 );
		message_begin	( MSG_BROADCAST, SVC_TEMPENTITY );
		write_byte		( TE_BEAMFOLLOW );
		write_short		( Weapon );
		write_short		( SPR_BIGBANG_T );
		write_byte		( 10 );
		write_byte		( 20 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		message_end		();
		
		setWeaponHOMING( Weapon, 550.0, 1 /* @ Aim Vec */, 1 | 2 /* Players + Weapons*/ );

	}
	else if ( equal( Class, "kiblast" ) && getClientLEVEL( Client ) == 0 )
	{
		setWeaponXPM( 2.2 );
		setWeaponXPC( 0 );
		
		message_begin	( MSG_BROADCAST, SVC_TEMPENTITY );
		write_byte		( TE_BEAMFOLLOW );
		write_short		( Weapon );
		write_short		( SPR_BLUE_T );
		write_byte		( 9 );
		write_byte		( 5 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		message_end		();
		

	}
	else if ( equal( Class, "kiblast" ) && getClientLEVEL( Client ) == 1 )
	{
		setWeaponXPM( 3.4 );
		setWeaponXPC( 4 );
		
		message_begin	( MSG_BROADCAST, SVC_TEMPENTITY );
		write_byte		( TE_BEAMFOLLOW );
		write_short		( Weapon );
		write_short		( SPR_JUBKAME_T );
		write_byte		( 9 );
		write_byte		( 7 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		write_byte		( 255 );
		message_end		();
		

	}
	else if ( equal( Class, "kiblast" ) && getClientLEVEL( Client ) == 2 )
	{
		setWeaponXPM( 3.4 );
		setWeaponXPC( 4 );
		
		message_begin	( MSG_BROADCAST, SVC_TEMPENTITY );
		write_byte		( TE_BEAMFOLLOW );
		write_short		( Weapon );
		write_short		( SPR_JUBKAME_T );
